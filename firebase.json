{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/mobile",
        "destination": "/mobile/index.html"
      },
      {
        "source": "/mobile/**",
        "destination": "/mobile/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
