{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/mobile/**",
        "destination": "/public-mobile/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
